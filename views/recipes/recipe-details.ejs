  <%- include("../includes/head.ejs") %>
  <link rel="stylesheet" href="/css/recipe-details.css" />
  </head>

  <body>
    <div id="recipe-detailed" class="container main-area">
      <div class="row">
        <%- include("../includes/h1-heading.ejs") %>
      </div>

      <div class="headArea row">
        <%- include("../includes/navigation.ejs") %>
      </div>

      <div class="main-content">

        <div class="row">
          <div class="detailed-recipe-image col-12">
            <img src="<%= recipe.recipeImage %>" alt="<%= recipe.recipeName %>">
          </div>
        </div>
        
        <div class="recipe-instructions">

          <div class="row">
            <div class="col-12">
              <h2>Zutatenliste</h2>
              <p><%= recipe.recipeIngredients %></p>
            </div>
          </div>
          
          <div class="row">
            <div class="col-12">
              <h2>Beschreibung</h2>
              <p><%= recipe.recipeDescription %></p>
            </div>
          </div>
          
          <div class="row">
            <div class="col-12">
              <h2>weitere Informationen</h2>
              <p><%= recipe.recipeInfo  %></p>
            </div>
          </div>

        </div> <!-- end recipe-instruction -->

      </div> <!-- end main-content -->

    </div> <!-- end container -->

  </body>
</html>  